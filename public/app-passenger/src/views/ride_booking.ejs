<body>
    <header>
        <h1>Agendar Corrida</h1>
    </header>

    <main>
        <form action="/ride-booking" method="POST">
            <label for="pickup">Ponto de Partida:</label>
            <input type="text" id="pickup" name="pickup" required>

            <label for="destination">Destino:</label>
            <input type="text" id="destination" name="destination" required>

            <label for="rideType">Tipo de Corrida:</label>
            <select id="rideType" name="rideType">
                <option value="standard">Padr√£o</option>
                <option value="premium">Premium</option>
                <option value="moto">Moto</option>
            </select>

            <button type="submit">Agendar Corrida</button>
        </form>
    </main>
</body>
</html>
